<Page
    x:Class="OCR.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0" HorizontalAlignment="Left">
        <StackPanel Orientation="Vertical">
            <Button x:Name="button" Content="Load PDF" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="583" Width="512" FontSize="10"/>
            <TextBox x:Name="clientName" Header="Client name:"></TextBox>
            <StackPanel Orientation="Horizontal">
            <Button x:Name="button1" Content="Prev. Page" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="button1_Click"/>
            <Button x:Name="button2" Content="Next Page" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="button2_Click"/>
            </StackPanel>
        </StackPanel>
        <Canvas x:Name="canvas" />
    </StackPanel>
</Page>
